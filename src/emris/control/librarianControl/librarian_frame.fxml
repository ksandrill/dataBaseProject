                    </columns>
                  </TableView>
               </content>
            </ScrollPane>
            <Label layoutX="270.0" layoutY="4.0" text="Библиотекари">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
    </AnchorPane>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#refreshBtn" text="обновить" />
            <Button mnemonicParsing="false" onAction="#addLibrarian" text="добавить " />
            <Button mnemonicParsing="false" onAction="#backBtn" text="назад" />
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
  </children>
